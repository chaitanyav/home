!!=============================================================================
!! RXVT-unicode setting
!!=============================================================================
URxvt.preeditType:Root

!!! Colors
URxvt.depth:32
URxvt.background:#2B2B2B
URxvt.foreground:white
URxvt.colorBD:Gray95
URxvt.colorUL:Green
URxvt.color1:Red2
URxvt.color4:RoyalBlue
URxvt.color5:Magenta2
URxvt.color8:Gray50
URxvt.color10:Green2
URxvt.color12:DodgerBlue
URxvt.color14:Cyan2
URxvt.color15:Gray95

!!! Font Setting
Xft.dpi: 99
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.rgba: rgb
URxvt.font:xft:Tamsyn:autohint=true:pixelsize=14
URxvt.boldFont:xft:Tamsyn:autohint=true:pixelsize=14

Xcursor.theme: Human

!!! Scroll Bar setting
Rxvt.scrollBar: true
Rxvt.scrollBar_right: true
Rxvt.scrollBar_floating: false
Rxvt.scrollstyle: plain

!!! Scroll Buffer
URxvt.saveLines: 10000

!!! Input Method Setting
inputMethod: fcitx

!!! For url select & click support
URxvt.perl-lib: /home/matti-nillu/urxvt-perls/
URxvt.perl-ext-common:  default,matcher,url-select,keyboard-select,clipboard

!!! matcher
URxvt.matcher.button:   1

!!! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

!!! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: google-chrome
URxvt.url-select.autocopy: true
URxvt.url-select.underline: true
URxvt.url-select.button: 1

!!! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

!!! to overwrite system commands
!!URxvt.clipboard.copycmd: xsel -ib
!!URxvt.clipboard.pastecmd: xsel -ob

!!! if using xclip
!!URxvt.clipboard.copycmd: xclip -i -selection clipboard
!!URxvt.clipboard.pastecmd: xclip -o -selection clipboard

!!! Misc Setting
URxvt.fading: 30
