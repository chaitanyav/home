!!=============================================================================
!! RXVT-unicode setting
!!=============================================================================
Rxvt.preeditType:Root

!!! Colors
URxvt.depth:32
!URxvt.background:#202020
URxvt.background:#2B2B2B
URxvt.foreground:white
URxvt.colorBD:Gray95
URxvt.colorUL:Green
URxvt.color1:Red2
URxvt.color4:RoyalBlue
URxvt.color5:Magenta2
URxvt.color8:Gray50
URxvt.color10:Green2
URxvt.color12:DodgerBlue
URxvt.color14:Cyan2
URxvt.color15:Gray95

!!! Scroll Bar setting
Rxvt.scrollBar:True
Rxvt.scrollBar_right:True
Rxvt.scrollBar_floating: False
Rxvt.scrollstyle:plain

!!! Scroll Buffer
Rxvt.saveLines:10000
!Rxvt.menu:/etc/X11/rxvt.menu

!!! Input Method Setting
inputMethod:fcitx

!!! For url select & click support
URxvt.perl-ext-common:  default,matcher,url-select,keyboard-select,clipboard
URxvt.url-select.launcher:	google-chrome
!URxvt.urlLauncher:      google-chrome
!URxvt.underlineURLs: 	true
URxvt.url-select.underline:	true
URxvt.matcher.button:   1
URxvt.keysym.M-u:    	perl:url-select:select_next
URxvt.keysym.M-Escape:	perl:keyboard-select:active
URxvt.keysym.M-s:	perl:keyboard-select:search
URxvt.keysym.M-c:	perl:clipboard:copy
URxvt.keysym.M-v:	perl:clipboard:paste
URxvt.keysym.M-C-v:	perl:clipboard:paste_escaped

!!! Misc Setting
URxvt.fading:	30

!!! Font Setting
!Xft.dpi:96
!Xft.antialias: True
!Xft.hinting: True
!Xft.hintstyle: hintslight
!Xft.lcdfilter: lcddefault
!Xft.rgba: rgb
URxvt.font: xft:Tamsyn-11:size=13

!! Terminus XFT font
!URxvt.font:	xft:Terminus:size=10:antialias=False:hinting=False,\
!		  xft:WenQuanYi Bitmap Song:size=10:antialias=False:hinting=False
!URxvt.boldfont:	xft:Terminus:size=10:antialias=False:hinting=False:bold,\
!		  xft:WenQuanYi Bitmap Song:bold:size=10:antialias=False:hinting=False

!! Monaco XFT Font
!URxvt.font: xft:Monaco:size=10:antialias=true:hinting=true,\
!	     xft:WenQuanYi Micro Hei Mono:size=10:antialias=true:hinting=true
!URxvt.boldfont: xft:Monaco:size=10:antialias=true:hinting=true:bold,\
!		 xft:WenQuanYi Micro Hei Mono:bold:size=10:antialias=true:hinting=true

!! Dina Font
!URxvt.font:	-windows-dina-medium-r-*-*-13-*-*-*-*-*-*-*,\
!		xft:WenQuanYi Bitmap Song:medium:pixelsize=12:antialias=False
!URxvt.boldFont:	-windows-dina-bold-r-*-*-13-*-*-*-*-*-*-*,\
!		xft:WenQuanYi Bitmap Song:bold:pixelsize=12:antialias=False

